rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Drawings folder - structured as /drawings/{roomCode}/{playerId}_round{N}.png
    match /drawings/{roomCode}/{fileName} {
      // Anyone authenticated can read drawings (for rating screen)
      allow read: if request.auth != null;
      
      // Only allow writes if:
      // 1. User is authenticated
      // 2. File name starts with their UID
      // 3. File is an image
      // 4. File is under 5MB
      allow write: if request.auth != null
        && fileName.matches(request.auth.uid + '.*')
        && request.resource.contentType.matches('image/.*')
        && request.resource.size < 5 * 1024 * 1024;
    }
    
    // Block everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

